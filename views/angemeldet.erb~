		<br><br>
		<% parts = @rooms.count %>
		<% width_tab = (600-parts*11)/parts %>
		<% for rooms in @rooms %>
			<div style="heigth:20px">
			<% if @room_id == rooms.id.to_s %>
				<div style="border:thin solid black; float:left; padding-left:5px; padding-right:5px; height:20px;border-bottom-width:0px; width:<%=width_tab%>px" onclick="roomnr = <%= rooms.id %>; document.Textfeld.room.value= roomnr "><%= rooms.name %>
			<% else %>
				<div style="border:thin solid black; float:left; padding-left:5px; padding-right:5px; height:20px; width:<%= width_tab%>px" onclick="roomnr = <%= rooms.id %>; document.Textfeld.room.value= roomnr"><%= rooms.name %>
			<% end %>
					
				</div>
			<div>
		<% end %>

		<div id ="textfenster" style="border:thin solid black; clear:left; width:600px; border-top-width:0px; overflow:auto; height: 400px">
			<% for thisPost in @posts %>
				<div style="font-size:10px;padding-left:5px;padding-top:10px;color:grey;">
					Post Nummer <%= thisPost.id %> von <%= @users.get(thisPost.user_id).name %> am <%= thisPost.timestamp %>: 
				</div>
				<div style="font-size:16px;padding-left:10px;">
					<%= thisPost.content %>
				</div>
			<% end %>
		</div>


		<form name="Textfeld" action="/posten" method="post">
			<textarea name="content" cols="50" rows="3"></textarea><br>
			<input name="room" type="text" size="1">

		<script type="text/javascript" charset="utf-8">
			roomnr = 1;
	    	$(document).ready(
				function() {
		        	setInterval(function() {
		            	$('#textfenster').load('/textfenster/' + roomnr)
		        	},500);
		    	}
			);
